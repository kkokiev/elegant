.services
	width 100%
	color dark

	&__banner
		display table-cell
		width 50%
		background transparent url(../img/content/services.jpg) center center no-repeat
		background-size cover

		+below(mobile)
			display block
			height 300px
			width 100%

	&__info
		display table-cell
		width 50%
		padding 45px 40px
		background bg-light
		clearfix()

		+below(mobile)
			display block
			width 100%
			background light

	&__title
		margin-bottom 80px
		font-family font-thick
		font-size 45px
		line-height 60px

	&__info-block
		float left
		width 50%
		padding-x(15px)

		+below(mobile)
			float none
			width 100%
			padding-x(0px)

	&__text
		font-size 18px
		line-height 30px

		+below(mobile)
			margin-bottom 40px

	&__list
		font-size 18px
		line-height 30px


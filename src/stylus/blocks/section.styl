.section
	padding 70px 0
	text-align center
	overflow-x hidden

	+below(mobile)
		padding-x(32px)

	&_padding-b_0
		padding-bottom 0

	&_padding-t_100
		padding-top 100px

	&__intro
		color brand
		font-family font-thick
		font-size 13px
		line-height 40px
		text-transform uppercase
		letter-spacing()

		+below(mobile)
			font-size 28px
			font-family font-regular

		+below(small)
			font-size 20px


	&__title
		margin-bottom 40px
		font-family font-thick
		font-size 44px
		line-height 50px
		text-transform capitalize
		letter-spacing()

		+below(small)
			font-size 30px
			line-height 1.2em


	&__info
		letter-spacing()

	&__container
		max-width 768px
		margin 0 auto
		margin-bottom 40px

		&_padding-b_100
			padding-bottom 100px


extends ../components/layout-default
include ../components/page
include ../components/topline
include ../components/banner
include ../components/banner-title
include ../components/section
include ../components/btn
include ../components/works
include ../components/workers
include ../components/post-intro
include ../components/contacts
include ../components/footer
include ../components/script

block head
	- var pageTitle = 'Elegant Home';

block content
	+page

		//header
		+topline

		//banner
		+banner
			+banner-title
				|Say
				i.banner-title__special  Haloa
				|  to your Portfolio

		//about
		+section
			p.section__intro Who we are

			h2.section__title Tell the world about yourself

			.section__container
				p.section__info
					| Typi non habent claritatem insitam; est usus legentis in iis qui facit eorum claritatem. Investigationes demonstraverunt lectores legere me lius quod ii legunt saepius. Claritas est etiam processus dynamicus, qui sequitur mutationem consuetudium lectorum. Mirum est notare quam littera gothica, quam nunc putamus parum claram, anteposuerit litterarum formas humanitatis per seacula quarta decima et quinta decima. Eodem modo typi, qui nunc, fiant sollemnes in futurum.

			.section__container
				+btn(href='/about.html') Read more about us

		//work
		+section
			p.section__intro What we do

			h2.section__title Show your amazing work

			+works

		//workers
		+section
			p.section__intro Who we are

			h2.section__title The amazing people behind this

			.section__container
				p.section__info
					| Typi non habent claritatem insitam; est usus legentis in iis qui facit eorum claritatem. Investigationes demonstraverunt lectores legere me lius quod ii legunt saepius. Claritas est etiam processus dynamicus, qui sequitur mutationem consuetudium lectorum.

			.section__container
				+workers

		//blog
		+section
			p.section__intro Last post

			h2.section__title We like to write

			.section__container
				+post-intro

			.section__container
				+btn(href='#') More from our blog

		//contacts
		+section
			p.section__intro Contact us

			h2.section__title Work with us

			.section__container
				+contacts

		//footer
		+footer

		+script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')
		+script(src='js/app.js')


